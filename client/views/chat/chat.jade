template(name="chat")
  div
    h3 Chat
    div.chat.well
      div.messages
        each this.messages
          div #{author}: #{message}

    form.main
      input(type="hidden", name="gameId", value="#{gameId}")
      input(name="message", type="text", value="", placeholder="Message", size="30")
      input.btn.btn-primary(type="submit", value="Send")
