template(name="chat")
  div.chat.well
    h3 Game chat
    hr.star-well
    div.messages
      each this.messages
        div #{author}: #{message}

  form.form-inline(role="form")
    div.form-group
      input(type="hidden", name="gameId", value="#{gameId}")
      input.form-control.input-lg(name="message", type="text", value="", placeholder="Enter a message")
      input.btn.btn-primary.btn-lg(type="submit", value="Send")
