template(name="applicationLayout")
  head
    title RoboRally
  body
  // Static navbar
  div.navbar.navbar-default(role="navigation")
    div.container-fluid
      div.navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target=".navbar-collapse")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") RoboRally!
      div.navbar-collapse.collapse
        ul.nav.navbar-nav
          li: a(href="{{pathFor 'about'}}") About
        ul.nav.navbar-nav.navbar-right
          li.login
            +loginButtons(align="right")
  div.container
    div.row
      div.col-md-8
        +yield
      div.col-md-4.well
        +yield("rightPanel")
  div.footer.well.well-sm
    +usersPill
